---
const url = 'https://la-chequera-del-banco-de-la-fe1.p.rapidapi.com/api/chequera';
const options = {
	method: 'GET',
	headers: {
		'x-rapidapi-key': import.meta.env.RAPIDAPI_KEY,
		'x-rapidapi-host': 'la-chequera-del-banco-de-la-fe1.p.rapidapi.com'
	}
};

const response = await fetch(url, options);
const data = await response.json();
console.log(data);
---

<div class="flex justify-center bg-slate-800 mx-40 p-10 rounded-md">
    <div class="flex flex-col items-center">
        <p class="text-white text-3xl italic text-center">{data.versiculo}</p>
        <p class="text-white text-lg mt-4 font-sans text-justify">{data.devocional}</p>
    </div>
</div>

